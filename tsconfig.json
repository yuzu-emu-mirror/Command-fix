{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types/"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
